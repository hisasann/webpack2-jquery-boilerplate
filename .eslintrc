{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "comma-dangle": 0,
    "consistent-return": 0,
    "prefer-arrow-callback": 0,
    "arrow-body-style": 0,
    "max-len": [2, {"code": 200, "tabWidth": 4, "ignoreUrls": true}],
    "prefer-const": 0,
    "eol-last": 0,
    "dot-notation": 0,
    "func-names": 0,
    "prefer-template": 0,
    "no-floating-decimal": 0,
    "quote-props": 0,
    "yoda": ["error", "never", { "exceptRange": true }],
    "new-cap": 0,
    "global-require": 0,
    "import/imports-first": 0,
    "space-unary-ops": 0,

    "no-trailing-spaces": 0,
    "no-shadow": 0,
    "no-param-reassign": 0,
    "no-useless-constructor": 0,
    "no-undef": 0,
    "no-unused-vars": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "no-mixed-operators": 0,
    "no-restricted-syntax": 0,
    "no-lonely-if": 0,

    "import/no-extraneous-dependencies": 0,
  },
  "plugins": [
    "import"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.eslint.js"
      }
    }
  }
}
